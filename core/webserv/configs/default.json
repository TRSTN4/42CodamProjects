{
	"servers": [
		{
			"listen_host": "0.0.0.0",
			"listen_port": 8001,
			"server_name": "myserver1",
			"error_pages": {
				"404": "error_pages/error_404.html",
				"403": "error_pages/error_403.html",
				"405": "error_pages/error_405.html",
				"413": "error_pages/error_413.html",
				"415": "error_pages/error_415.html",
				"500": "error_pages/error_500.html",
				"502": "error_pages/error_502.html",
				"503": "error_pages/error_503.html",
				"400": "error_pages/error_400.html",
				"401": "error_pages/error_401.html",
				"504": "error_pages/error_504.html"
			},
			"client_max_body_size": "1M",
			"locations": [
				{
					"path": "/",
					"methods": ["GET"],
					"root": "www",
					"index": "index.html",
					"autoindex": true
				},
				{
					"path": "/upload",
					"methods": ["POST", "GET", "DELETE"],
					"root": "www",
					"index": "post.html",
					"upload_path": "uploads"
				},
				{
					"path": "/redirect",
					"methods": ["GET"],
					"redirection": "http://nu.nl",
					"return_code": 301
				},
				{
					"path": "/ls",
					"methods": ["GET"],
					"root": "www/css",
					"autoindex": true
				},
                {
                    "path": "/cgi-bin",
                    "methods": ["GET", "POST"],
                    "cgi_extension": [".py", ".sh", ".cgi"],
                    "cgi_path": ["/usr/bin/python3", "/bin/bash", "/bin/bash"],
                    "root": "cgi-bin"
                }
			]
		},
		{
			"listen_host": "0.0.0.0",
			"listen_port": 8002,
			"server_name": "myserver2",
			"client_max_body_size": "1M",
			"locations": [
				{
					"path": "/",
					"methods": ["GET"],
					"root": "www",
					"index": "cgi.html",
					"autoindex": true
				}
			]
		},
		{
			"listen_host": "0.0.0.0",
			"listen_port": 8001,
			"server_name": "myserver3",
			"client_max_body_size": "1M",
			"locations": [
				{
					"path": "/ls",
					"methods": ["GET"],
					"root": "www/css",
					"autoindex": true
				}
			]
		}
	]
}
